<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Vapour Library</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              Tag
            </a>
            <form id="tagSearchForm" action="/tagSearch" method="POST" style="display:none;">
              <input type="hidden" name="tag" id="tagInput">
            </form>

            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#" onclick="submitTag('Role-playing')">Role-playing</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Action')">Action</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('RPG')">RPG</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Strategy')">Strategy</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Adventure')">Adventure</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Panel</a>
            </li>
          <% } %>
        </ul>     
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Admin Panel</h2>
    <a href="/addGame" class="btn btn-primary">Add Game</a>
  </div>

  <div class="mb-4">
    <div class="card text-bg-info">
      <div class="card-body">
        <h5 class="card-title">Total Games</h5>
        <p class="card-text fs-4"><%= Games.length %></p>
      </div>
    </div>
  </div>

  <table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Price ($)</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (Games.length > 0) { %>
        <% Games.forEach((game, gameId) => { %>
          <tr>
            <td><%= game.gameId %></td>
            <td><%= game.title %></td>
            <td>$<%= game.price %></td>
            <td><%= game.desc %></td>
            <td>
                <img src="<%= game.image %>" alt="Game Image" width="80" height="60" style="object-fit: cover;">
            </td>
            <td>
              <a href="/editGame/<%= game.gameId %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/deleteGame/<%= game.gameId %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6">No games found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <script>
    function submitTag(tag) {
      document.getElementById('tagInput').value = tag;
      document.getElementById('tagSearchForm').submit();
    }
  </script>

</body>
</html>