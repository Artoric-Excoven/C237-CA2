<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Vapour Library</title>
  <style>
    .carousel-size {
      width: 300px;
      margin: auto;
    }
    .carousel-item {
      transition: transform 0.5s ease-in-out;
    }
    .card {
      width: 50%;
      margin-top: 5%;
    }
    #bestseller-BG {
      background-image: url('images/vapour.jpg');
      background-size: cover;
      background-position: center;
      height: 600px;
    }
    h1 {
      display: flex;
      justify-content: center;
      color: #8f2c48;
      background-color: black;
      font-family: 'Times New Roman', Times, serif;
    }
    .gameImageSize {
      width: 180px;
      height: 270px;
    }
    .btn-primary {
      width: 75%;
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
          <% } %>
        </ul>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search"/>
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <section id="bestseller-BG" class="container-fluid">
    <h1>Featured</h1>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <div class="col d-flex justify-content-end">
        <div class="card h-100">
          <div class="carousel-size">
            <div id="carousel1" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <button type="button" data-bs-target="#carousel1" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carousel1" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carousel1" data-bs-slide-to="2" aria-label="Slide 3"></button>
              </div>
              <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                  <img src="images/harrypotter600x900.png" class="d-block w-100" alt="Harry Potter">
                </div>
                <div class="carousel-item" data-bs-interval="10000">
                  <img src="images/unbroken600x900.png" class="d-block w-100" alt="Unbroken">
                </div>
                <div class="carousel-item" data-bs-interval="10000">
                  <img src="images/wonder600x900.png" class="d-block w-100" alt="Wonder">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carousel1" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carousel1" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card h-100">
          <a class="btn btn-primary" href="#" role="button">Click here for more info</a>
          <div class="carousel-size">
            <div id="carousel2" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                  <div>Synopsis:<br>"Harry Potter and the Philosopher's Stone" by J.K. Rowling follows the journey of Harry Potter...</div>
                </div>
                <div class="carousel-item" data-bs-interval="10000">
                  <div>Synopsis:<br>"Unbroken" by Laura Hillenbrand tells the incredible true story of Louis Zamperini...</div>
                </div>
                <div class="carousel-item" data-bs-interval="10000">
                  <div>Synopsis:<br>"Wonder" by R.J. Palacio tells the story of August Pullman, a boy with a facial deformity...</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="container text-center">
      <div class="row">
        <div class="col-12">
          <br>
          <h1>All Games</h1>
        </div>
      </div>
      <% for (let i = 0; i < Games.length; i += 4) { %>
        <div class="row">
          <% for (let j = i; j < i + 4 && j < Games.length; j++) { %>
            <div class="col-3 d-flex justify-content-center">
              <a href="/game/<%= encodeURIComponent(Games[j].title) %>?id=<%= Games[j].gameId %>">
                <img class="gameImageSize" src="images/<%= Games[j].image %>" alt="<%= Games[j].title %>">
              </a>
            </div>
          <% } %>
        </div>
        <div class="row">
          <% for (let j = i; j < i + 4 && j < Games.length; j++) { %>
            <div class="col-3 d-flex justify-content-center">
              <p><%= Games[j].title %></p>
            </div>
          <% } %>
        </div>
      <% } %>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const carousel1 = document.querySelector('#carousel1');
      const carousel2 = document.querySelector('#carousel2');
      const linkButton = document.querySelector('.btn-primary');

      const carousel1Instance = new bootstrap.Carousel(carousel1);
      const carousel2Instance = new bootstrap.Carousel(carousel2);
      
      // UPDATE THIS PART TO LINK TO GAMES
      const bookLinks = [
        'harrypotter.html',
        'unbroken.html',
        'wonder.html'
      ];

      function updateLink(event) {
        linkButton.href = bookLinks[event.to];
      }

      carousel1.addEventListener('slide.bs.carousel', function (event) {
        carousel2Instance.to(event.to);
        updateLink(event);
      });

      carousel2.addEventListener('slide.bs.carousel', function (event) {
        carousel1Instance.to(event.to);
        updateLink(event);
      });

      // Set initial button link
      linkButton.href = bookLinks[0];
    });
  </script>
</body>
</html>
