<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Vapour Library</title>
  <style>
    body {
      background-color: #1b2838;
      color: #c7d5e0;
    }
  
    .login-container {
      max-width: 500px;
      background-color: #2a475e;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px #000;
    }
  
    .form-label {
      color: #c7d5e0;
    }

    .form-control {
      background-color: #1b2838;    
      color: #ffffff;               
      border: 1px solid #66c0f4;    
    }

    .form-control:focus {
      background-color: #1b2838;
      color: #ffffff;
      border-color: #8acde9;      
      box-shadow: 0 0 0 0.2rem rgba(102, 192, 244, 0.25);
    }

    .btn-login {
      background-color: #66c0f4;
      color: #1b2838;
      font-weight: bold;
    }
  
    .btn-login:hover {
      background-color: #8acde9;
    }
  
    a {
      color: #66c0f4;
      text-decoration: none;
    }
  
    a:hover {
      text-decoration: underline;
    }
  </style>

</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              Tag
            </a>
            <form id="tagSearchForm" action="/tagSearch" method="POST" style="display:none;">
              <input type="hidden" name="tag" id="tagInput">
            </form>

            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#" onclick="submitTag('Role-playing')">Role-playing</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Action')">Action</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('RPG')">RPG</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Strategy')">Strategy</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Adventure')">Adventure</a></li>
            </ul>
          </li>
          <% if (user.role==="admin" ) { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Panel</a>
            </li>
            <% } %>
        </ul>
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="login-container">
      <h2 class="text-center mb-4">ðŸŽ®Add New GameðŸŽ®</h2>
      <form action="/addGame" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">
  
        <div class="mb-3">
          <label for="title" class="form-label">Game Title</label>
          <input type="text" class="form-control" id="title" name="title" required>
        </div>
  
        <div class="mb-3">
          <label for="price" class="form-label">Price ($)</label>
          <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" max="999.99" required>
        </div>
  
        <div class="mb-3">
          <label for="desc" class="form-label">Game Description:</label>
          <textarea class="form-control" name="desc" placeholder="Add description" max-length="255" rows="4" required style="resize: none;">
          </textarea>
        </div>
  
        <div class="mb-4">
          <label for="image" class="form-label">Game Image</label>
          <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
        </div>

        <div class="mb-3">
          <label for="tag" class="form-label fw-medium text-muted">Category</label>
          <select class="form-select form-select-lg rounded-3" id="category" name="category" required>
            <option value="" selected>Select a category</option>
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
            <option value="RPG">RPG</option>
            <option value="Strategy">Strategy</option>
            <option value="Simulation">Simulation</option>
            <option value="Other/Misc">Other/Misc</option>
          </select>
          <div class="invalid-feedback">Please select a category.</div>
        </div>

  
        <div class="d-grid">
          <button type="submit" class="btn btn-login">Add Game</button>
        </div>
  
      </form>
    </div>
    </div>
    <script>
      function submitTag(tag) {
        document.getElementById('tagInput').value = tag;
        document.getElementById('tagSearchForm').submit();
      }
    </script>
</body>
</html>
