<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Vapour Library</title>
</head>

  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Panel</a>
            </li>
          <% } %>
        </ul>     
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

    <div class="bg-light min-vh-100 d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="card p-4 mx-auto shadow-lg" style="max-width: 550px;">
                <h2 class="text-center mb-4 fw-bold">Edit Game</h2>
                
                <% if (game) { %>
                    <form action="/editGame/<%= game.gameId %>" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label fw-medium text-muted">Game Title</label>
                            <input type="text" class="form-control form-control-lg rounded-3" id="title" name="title" value="<%= game.title %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="price" class="form-label fw-medium text-muted">Price ($)</label>
                            <input type="number" class="form-control form-control-lg rounded-3" id="price" name="price" min="0" max="999.99" step="0.01" value="<%= game.price %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="desc" class="form-label fw-medium text-muted">Description</label>
                            <textarea class="form-control rounded-3" id="desc" name="desc" rows="4" required><%= game.desc %></textarea>
                        </div>

                        <div class="mb-4">
                            <img src="<%= game.image %>" class="img-thumbnail mb-3" style="width: 150px;">
                            <label for="image" class="form-label">Game Image</label>
                            <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3">Update Game</button>
                        </div>
                    </form>
                <% } else { %>
                    <p class="text-danger text-center">Game not found.</p>
                <% } %>
            </div>
        </div>
    </div>
  </body>