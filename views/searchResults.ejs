<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Vapour Library</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Panel</a>
            </li>
          <% } %>
        </ul>     
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>
  
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <h3>Search: <%= query.searchQuery %></h3>
      </div>
    </div>
    <div class="mb-4">
    <div class="card text-bg-info">
      <div class="card-body">
        <h5 class="card-title">Total Games</h5>
          <p class="card-text fs-4"><%= Games.length %></p>
        </div>
      </div>
    </div>
    <% for (let i = 0; i < Games.length; i += 4) { %>
      <div class="row">
        <% for (let j = i; j < i + 4 && j < Games.length; j++) { %>
          <div class="col-3 d-flex justify-content-center">
            <a href="/game/<%= encodeURIComponent(Games[j].title) %>?id=<%= Games[j].gameId %>">
              <img src="images/<%= Games[j].image %>" alt="<%= Games[j].title %>" width="320" height="240">
            </a>
          </div>
        <% } %>
      </div>
      <div class="row">
        <% for (let j = i; j < i + 4 && j < Games.length; j++) { %>
          <div class="col-3 d-flex justify-content-center">
            <p><%= Games[j].title %></p>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</body>
</html>
