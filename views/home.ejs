<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <title>Vapour Library</title>

  <style>
    .side-img {
      width: 120px;
      height: 640px;
      object-fit: cover;
    }

    .main-layout {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }

    .main-content {
      flex-grow: 1;
      margin: 0 20px;
    }

    .game-desc {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s ease, padding 0.4s ease;
      padding: 0 1rem;
    }

    .game-card:hover .game-desc {
      max-height: 200px;
      padding: 1rem;
    }

    .card-img-top {
      transition: transform 0.3s ease, box-shadow 0.3s ease, filter 0.3s ease;
    }

    .card-img-top:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
      filter: brightness(80%);
      z-index: 10;
      position: relative;
    }

    .card {
      animation: fadeInUp 0.5s ease both;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-title {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .game-card .card-body {
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(5px);
      border-radius: 0 0 10px 10px;
    }

    #top-button {
      z-index: 1000;
    }

    /* Badge for genre tag */
    .badge-genre {
      position: absolute;
      top: 10px;
      left: 10px;
      background-color: #ffc107; /* bootstrap warning color */
      color: #212529;
      font-weight: 600;
      padding: 0.25em 0.5em;
      border-radius: 0.375rem;
      font-size: 0.8rem;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/vapourstore">Store</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">More</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Tag</a>
            <form id="tagSearchForm" action="/tagSearch" method="POST" style="display:none;">
              <input type="hidden" name="tag" id="tagInput" />
            </form>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#" onclick="submitTag('Role-playing')">Role-playing</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Action')">Action</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('RPG')">RPG</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Strategy')">Strategy</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Adventure')">Adventure</a></li>
              <li><a class="dropdown-item" href="#" onclick="submitTag('Other/Misc')">Other/Misc</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item"><a class="nav-link" href="/addGame">Add Game</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin">Admin Panel</a></li>
          <% } %>
        </ul>
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="main-layout container">
    <img id="left-ad" src="" alt="Left Image" class="side-img" />
    <div class="main-content">
      <h2>Your Game Library</h2>

      <% if (games.length === 0) { %>
        <div class="alert alert-warning mt-3">
          You don't own any games yet. Visit the <a href="/vapourstore" class="alert-link">Vapour Store</a> to buy some!
        </div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
          <% games.forEach(function(game) { %>
            <div class="col">
              <div class="card h-100 bg-secondary text-white position-relative game-card">
                <% if (game.tag) { %>
                  <div class="badge-genre"><%= game.tag %></div>
                <% } %>
                <% if (game.image) { %>
                  <a href="/game/<%= game.title %>?id=<%= game.gameId %>">
                    <img src="<%= game.image %>" class="card-img-top" alt="<%= game.title %> Cover" />
                  </a>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title" title="<%= game.title %>"><%= game.title %></h5>
                  <div class="game-desc">
                    <p><%= game.desc %></p>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
    <img id="right-ad" src="" alt="Right Image" class="side-img" />
  </div>

  <!-- Back to Top Button -->
  <button onclick="window.scrollTo({top: 0, behavior: 'smooth'});" class="btn btn-secondary position-fixed bottom-0 end-0 m-4" id="top-button">
    â†‘ Top
  </button>
  <div id="ad-data" data-images='<%= JSON.stringify(adverts.map(ad => ad.image)) %>'></div>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const adData = document.getElementById('ad-data').dataset.images;
      const ads = JSON.parse(adData);

      // Fisher-Yates Shuffle
      function shuffle(array) {
        for (let i = array.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [array[i], array[j]] = [array[j], array[i]];
        }
        return array;
      }

      const shuffledAds = shuffle(ads);
      const leftAd = shuffledAds[0];
      const rightAd = shuffledAds[1] || shuffledAds[0]; // fallback if only one ad

      document.getElementById('left-ad').src = leftAd;
      document.getElementById('right-ad').src = rightAd;
    });

    function submitTag(tag) {
      document.getElementById('tagInput').value = tag;
      document.getElementById('tagSearchForm').submit();
    }
  </script>
</body>
</html>
