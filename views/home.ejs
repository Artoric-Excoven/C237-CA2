<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Vapour Library</title>
  <style>
    .side-img {
      width: 100px;
      height: 600px;
      object-fit: cover;
    }

    .main-layout {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }

    .main-content {
      flex-grow: 1;
      margin: 0 20px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Vapour Library</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex justify-content-between" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vapourstore">Store</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
              More
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
          <% if (user.role === "admin") { %>
            <li class="nav-item">
              <a class="nav-link" href="/addGame">Add Game</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin">Admin Panel</a>
            </li>
          <% } %>
        </ul>
        <form class="d-flex" role="search" action="/search" method="POST">
          <input class="form-control me-2" type="search" name="query" placeholder="Search" required />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
    </div>
  </nav>

  <div class="main-layout container">
    <img id="left-ad" src="" alt="Left Image" class="side-img">
    <div class="main-content">
      <h2>Your Game Library</h2>

      <% if (games.length === 0) { %>
        <div class="alert alert-warning mt-3">
          You don't own any games yet. Visit the <a href="/vapourstore" class="alert-link">Vapour Store</a> to buy some!
        </div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
          <% games.forEach(function(game) { %>
            <div class="col">
              <div class="card h-100 bg-secondary text-white">
                <% if (game.image) { %>
                  <a href="/game/<%= game.title %>?id=<%= game.gameId %>">
                    <img src="<%= game.image %>" class="card-img-top" alt="<%= game.title %> Cover">
                  </a>
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= game.title %></h5>
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= game.desc %></h5>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    <img id="right-ad" src="" alt="Right Image" class="side-img">
  </div>
  <script>
    const ads = JSON.parse('<%= JSON.stringify(adverts.map(ad => ad.image)) %>');

    // Fisher-Yates Shuffle
    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    const shuffledAds = shuffle(ads);
    const leftAd = shuffledAds[0];
    const rightAd = shuffledAds[1] || shuffledAds[0]; // fallback if only one ad

    window.addEventListener('DOMContentLoaded', () => {
      document.getElementById('left-ad').src = leftAd;
      document.getElementById('right-ad').src = rightAd;
    });
  </script>

</body>
</html>
